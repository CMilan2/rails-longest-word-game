<h1>New game</h1>
<ul style="list-style: none; display:inline-flex;">
<% @letters.each do |letter| %>
  <li style="margin: 10px; padding: 20px; background-color: DodgerBlue; border: 2px solid blue; border-radius: 5px; color: white;">
      <%= letter %>
  </li>
<% end %>
</ul>
<p>
  What is the longest word you can find ?
</p>
<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join(" ") %>
  <input type="text" name="word">
  <input type="submit" value="Ask!">
</form>
